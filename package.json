{
  "name": "vue-nudge",
  "version": "1.0.0",
  "description": "A game-quality, interactive tutorial library for Vue 3 applications",
  "author": "Amir Talic",
  "license": "MIT",
  "keywords": [
    "vue",
    "vue3",
    "tutorial",
    "onboarding",
    "guide",
    "tour",
    "walkthrough",
    "interactive",
    "spotlight",
    "composable",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stwic/nudge"
  },
  "bugs": {
    "url": "https://github.com/stwic/nudge/issues"
  },
  "homepage": "https://github.com/stwic/nudge#readme",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "vue-tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.0",
    "@vue/test-utils": "^2.4.0",
    "jsdom": "^27.3.0",
    "typescript": "~5.8.0",
    "vite": "^7.0.0",
    "vitest": "^3.2.0",
    "vue": "^3.5.0",
    "vue-tsc": "^3.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
